<div class="mt-4">
        <h3>Edit data</h3>
        <form class="mt-4" method="POST" action="/games/{{result.id}}?_method=PUT">
        <div class="form-group">
            <label for="name">name</label>
            <input type="text" class="form-control" value="{{result.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="des">Mô tả</label>
            <textarea class="form-control" id="des" name="des">{{result.des}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">video id</label>
            <input type="text" class="form-control" value="{{result.videoId}}" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="image">image</label>
            <input type="text" class="form-control" value="{{result.image}}" id="image" name="image">
        </div>
        <button type="submit" class="btn btn-primary">Save to DB</button>
        </form>
</div>
